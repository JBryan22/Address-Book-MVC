@{
  Layout = "_Layout";
}

<h1>Your Address Book</h1>
<h3>Click On A Contact To View Details</h3>

@if (@Model.Count == 0)
{
  <p>You currently have no contacts. Click below to add a new contact to your addres book!</p>
}

<ul>
  @foreach (var contact in @Model)
  {
    <li><a href="contact/@contact.GetId()">@contact.GetName()</a></li>
    <form action="/contact/remove/@contact.GetId()" method="post">
      <button class="btn btn-danger" type="submit">Remove This Contact</button>
    </form>
  }
</ul>

@if (@Model.Count != 0)
{
  <form action="/contact/clear" method="post">
    <button class="btn btn-danger" type="submit">Clear All Contacts</button>
  </form>
}

<p><a href="/contact/create">Add A New Contact</a></p>
